### Cloning ###

git clone (ssh git address) new_app_folder_name_on_local_computer
cd new_app

### create new database for new app ###
createdb -Ouser1 -Eutf8 #{@app_name}_development

bundle install
rake db:migrate

create config/application.yml
	GMAIL_USERNAME
	GMAIL_PASSWORD
	SECRET_TOKEN: "#{secret_token_found_in_config/initializers/secret_token.rb"
	development:
		MAILER_HOST: "localhost:3000"
	production:
		MAILER_HOST	"#{name_of_new_heroku_app}"

	*** replace each hard-coded value with new ENV["VARIABLE_NAME"]



git add .
git commit -m "whatever"
git push

if no heroku app
	heroku create
	git push heroku master

	heroku config:add GMAILER_USERNAME=monarchmobile2@gmail.com GMAIL_PASSWORD=aslkdhf SECRET_TOKEN=.... and so on, (MAILER_HOST, and AWS creditials if needed)

	heroku run rake db:migrate
else
	git push heroku master




